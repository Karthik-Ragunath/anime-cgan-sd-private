    "version": "0.2.0",
    "configurations": [
        {
            "name": "train_rewrite",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/train_rewrite.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--resume_cond", "gen_dis",
                "--dataset", "Hayao",
                "--use_spectral_norm",
                "--lr-discriminator", "0.00004",
                "--batch-size", "6",
                "--initial-epochs", "1",
                "--initial-lr", "0.0001",
                "--save-interval", "1",
                "--lr-generator", "0.00002",
                "--checkpoint-dir", "checkpoints_minimal",
                "--adversarial_loss_disc_weight", "10.0",
                "--save-image-dir", "save_imgs_minimal",          
                "--adversarial_loss_gen_weight", "10.0",              
                "--content_loss_weight", "1.5",              
                "--gram_loss_weight", "3.0",                
                "--chromatic_loss_weight", "30.0",                
            ]
        },
        {
            "name": "animegan_minimal_inference",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/inference_new.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--checkpoint_path", "checkpoints_rewrite/generator_Hayao.pth",
                "--source_file_path", "example/result/140.jpeg",
                "--destination_file_path", "save_imgs_rewrite/inference_images/140_anime.jpg",
            ]
        },
        {
            "name": "stable_diffusion_edits",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/stable_diffusion_inference.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": [
                "--source_file_path", "save_imgs_rewrite/inference_images/10_anime.jpg",
                "--destination_file_path", "save_imgs_rewrite/inference_images/10_anime_stable_diffused.jpg",
            ]
        }
    ]
}